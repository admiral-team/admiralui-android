<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AdmiralUIAndroid" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#3A83F1</item>
        <item name="colorPrimaryVariant">#316FCC</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="Theme.AdmiralUIAndroid.Launcher" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="viewInflaterClass">com.admiral.uikit.inflater.AdmiralMaterialInflater</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/blue_10</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
    </style>
</resources>