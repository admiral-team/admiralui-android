<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <com.admiral.uikit.layout.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.admiral.uikit.components.appbar.Appbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentInsetStartWithNavigation="0dp"
            app:admiralTitleTextGravity="center"
            app:admiralTitleText="@string/tabs_icon_title" />

        <com.admiral.uikit.components.tabs.StandardTabs
            android:id="@+id/tabsState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/module_x4"
            app:checkedId="@+id/defaultTab">

            <com.admiral.uikit.components.tabs.StandardTab
                android:id="@+id/defaultTab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tabs_default" />

            <com.admiral.uikit.components.tabs.StandardTab
                android:id="@+id/disabledTab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tabs_disabled" />

        </com.admiral.uikit.components.tabs.StandardTabs>

        <com.admiral.uikit.components.text.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/module_x4"
            android:layout_marginTop="@dimen/module_x9"
            android:text="@string/tabs_two_controls"
            app:admiralTextColorNormalEnabled="@color/grey_40"
            app:admiralTextStyle="headline" />

        <com.admiral.uikit.components.tabs.IconTabs
            android:id="@+id/tabsTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/module_x4"
            app:checkedId="@+id/one2">

            <com.admiral.uikit.components.tabs.IconTab
                android:id="@+id/one2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:admiralIcon="@drawable/admiral_ic_mobile_solid"
                app:admiralText="@string/tabs_one" />

            <com.admiral.uikit.components.tabs.IconTab
                android:id="@+id/two2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:admiralIcon="@drawable/admiral_ic_card_solid"
                app:admiralText="@string/tabs_two" />
        </com.admiral.uikit.components.tabs.IconTabs>

        <com.admiral.uikit.components.text.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/module_x4"
            android:layout_marginTop="@dimen/module_x9"
            android:text="@string/tabs_three_controls"
            app:admiralTextColorNormalEnabled="@color/grey_40"
            app:admiralTextStyle="headline" />

        <com.admiral.uikit.components.tabs.IconTabs
            android:id="@+id/tabsThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/module_x4"
            app:checkedId="@+id/one">

            <com.admiral.uikit.components.tabs.IconTab
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:admiralIcon="@drawable/admiral_ic_mobile_solid"
                app:admiralText="@string/tabs_one" />

            <com.admiral.uikit.components.tabs.IconTab
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:admiralIcon="@drawable/admiral_ic_card_solid"
                app:admiralText="@string/tabs_two" />

            <com.admiral.uikit.components.tabs.IconTab
                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:admiralIcon="@drawable/admiral_ic_card_solid"
                app:admiralText="@string/tabs_three" />

        </com.admiral.uikit.components.tabs.IconTabs>
    </com.admiral.uikit.layout.LinearLayout>
</ScrollView>