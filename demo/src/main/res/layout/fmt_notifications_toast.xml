<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.admiral.uikit.layout.LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/coordinator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/module_x4">

        <com.admiral.uikit.components.appbar.Appbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.admiral.uikit.components.text.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/module_x4"
            android:text="@string/notifications_toast_title"
            app:admiralTextStyle="largetitle1" />

        <com.admiral.uikit.components.text.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/module_x4"
            android:layout_marginTop="@dimen/module_x6"
            android:layout_marginEnd="@dimen/module_x4"
            android:text="@string/notifications_toast_text"
            app:admiralTextStyle="body2" />

        <com.admiral.uikit.components.button.Button
            android:id="@+id/btnToast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/module_x12"
            android:text="@string/notifications_action_show_toast"
            app:admiralButtonStyle="ghost" />

    </com.admiral.uikit.layout.LinearLayout>

</ScrollView>
