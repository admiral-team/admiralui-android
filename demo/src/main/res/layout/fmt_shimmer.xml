<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.admiral.uikit.layout.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.admiral.uikit.components.appbar.Appbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.admiral.uikit.components.text.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/module_x4"
            android:text="@string/shimmer_title"
            app:admiralTextStyle="largetitle1" />

        <com.admiral.uikit.components.cell.BaseCell
            android:id="@+id/cellShimmerTrailing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/module_x4"
            android:paddingStart="@dimen/module_x4"
            android:paddingEnd="@dimen/module_x4">

            <com.admiral.uikit.components.cell.unit.CardCellUnit
                android:id="@+id/cardTrailing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:admiralCellUnitType="leading"
                app:admiralIcon="@drawable/test_ic_card_start" />

            <com.admiral.uikit.components.cell.unit.TitleSummSubtitleCellUnit
                android:id="@+id/textTrailing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:admiralCellUnitType="leadingText"
                app:admiralSummText="@string/shimmer_example_summ"
                app:admiralTitleText="@string/shimmer_example_title" />

            <com.admiral.uikit.components.cell.unit.shimmer.ShimmerCellUnit
                android:id="@+id/subtitlePaymentTrailing"
                android:layout_width="28dp"
                android:layout_height="16dp"
                app:admiralCellUnitType="trailing"
                app:admiralIcon="@drawable/test_ic_visa" />
        </com.admiral.uikit.components.cell.BaseCell>

        <com.admiral.uikit.components.cell.BaseCell
            android:id="@+id/cellShimmerLeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/module_x6"
            android:paddingStart="@dimen/module_x4"
            android:paddingEnd="@dimen/module_x4">

            <com.admiral.uikit.components.cell.unit.shimmer.ShimmerCellUnit
                android:id="@+id/shimmerLeading"
                android:layout_width="38dp"
                android:layout_height="28dp"
                android:layout_marginTop="@dimen/module_x2" />

            <com.admiral.uikit.components.cell.unit.TitleSummSubtitleCellUnit
                android:id="@+id/textLeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:admiralCellUnitType="leadingText"
                app:admiralSummText="@string/shimmer_example_summ"
                app:admiralTitleText="@string/shimmer_example_title" />

            <com.admiral.uikit.components.cell.unit.SubtitlePaymentCellUnit
                android:id="@+id/subtitlePaymentLeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:admiralCellUnitType="trailing"
                app:admiralIcon="@drawable/test_ic_visa" />
        </com.admiral.uikit.components.cell.BaseCell>

        <com.admiral.uikit.components.cell.BaseCell
            android:id="@+id/cellShimmerLeadingText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/module_x6"
            android:paddingStart="@dimen/module_x4"
            android:paddingEnd="@dimen/module_x4">

            <com.admiral.uikit.components.cell.unit.CardCellUnit
                android:id="@+id/cardLeadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:admiralCellUnitType="leading"
                app:admiralIcon="@drawable/test_ic_card_start" />

            <com.admiral.uikit.components.cell.unit.shimmer.ShimmerListCellUnit
                android:id="@+id/textLeadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:admiralCellUnitType="leadingText"
                app:admiralViewsCount="2" />

            <com.admiral.uikit.components.cell.unit.SubtitlePaymentCellUnit
                android:id="@+id/subtitlePaymentLeadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:admiralCellUnitType="trailing"
                app:admiralIcon="@drawable/test_ic_visa" />
        </com.admiral.uikit.components.cell.BaseCell>

        <com.admiral.uikit.components.cell.BaseCell
            android:id="@+id/cellShimmerWidth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/module_x6"
            android:paddingStart="@dimen/module_x4"
            android:paddingEnd="@dimen/module_x4">

            <com.admiral.uikit.components.cell.unit.shimmer.ShimmerCellUnit
                android:id="@+id/cardWidth"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/module_x13"
                app:admiralCellUnitType="leading"
                app:admiralIcon="@drawable/test_ic_card_start" />
        </com.admiral.uikit.components.cell.BaseCell>
    </com.admiral.uikit.layout.LinearLayout>
</ScrollView>
