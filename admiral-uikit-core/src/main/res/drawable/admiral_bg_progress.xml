<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="270"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="270">

            <shape
                android:innerRadius="33dp"
                android:shape="ring"
                android:thickness="2dp">

                <rotate
                    android:fromDegrees="0"
                    android:pivotX="50%"
                    android:pivotY="50%"
                    android:toDegrees="360" />

                <gradient
                    android:centerColor="#3A83F1"
                    android:endColor="#3A83F1"
                    android:startColor="#3A83F1"
                    android:type="sweep" />

            </shape>
        </rotate>
    </item>
</layer-list>
