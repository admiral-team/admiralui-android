<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AdmiralBottomSheetDialogOverlay" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/AdmiralBottomSheetDialog.Animation</item>
    </style>

    <style name="AdmiralBottomSheetDialog.Animation" parent="Animation.MaterialComponents.BottomSheetDialog">
        <item name="android:windowEnterAnimation">@anim/admiral_anim_bottom_sheet_slide_in</item>
        <item name="android:windowExitAnimation">@anim/admiral_anim_bottom_sheet_slide_out</item>
    </style>

    <style name="AdmiralBottomSheetDialog.Modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/admiral_bg_dialog_8dp</item>
    </style>
</resources>